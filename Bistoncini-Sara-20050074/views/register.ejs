    <div class="auth-container">
        <div class="auth-form">
            <h1>Registrati</h1>
            <form>
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="Indirizzo Email">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Password">
                </div>
