    <div class="container my-5">
        <h1 class="text-center">I miei libri</h1>
        <div class="row">
            <!-- Placeholder per i libri letti -->
            <div class="col-md-3">
                <div class="book-card" data-toggle="modal" data-target="#bookModal">
                    <img src="images/book-placeholder.jpg" alt="Copertina del libro" class="book-cover">
                    <div class="book-info">
                        <h5>Oceano Mare</h5>
                        <p>Autore: Alessandro Baricco</p>
                    </div>
                </div>
            </div>
        </div>
