    <!-- Modal per visualizzare i dettagli del libro -->
    <div class="modal fade" id="bookModal" tabindex="-1" role="dialog" aria-labelledby="bookModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="bookModalLabel">Dettagli del libro</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body modal-content-centered">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="images/book-placeholder.jpg" alt="Copertina del libro" class="img-fluid">
                        </div>
                        <div class="col-md-8">
                            <h5>Oceano Mare</h5>
                            <p>Autore: Alessandro Baricco</p>
                            <p>Numero di pagine: 300</p>
                            <p>Data di pubblicazione: 1993</p>
                            <p>Genere letterario: Narrativa italiana</p>
                            <p>Casa editrice: Rizzoli</p>
                            <p>Valutazione: 
                                <span class="fa fa-star"></span>
                                <span class="fa fa-star"></span>
                                <span class="fa fa-star"></span>
                                <span class="fa fa-star"></span>
                                <span class="fa fa-star"></span>
                            </p>
                            <h5>Incipit</h5>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere erat a ante.</p>
                            <h5>Lascia una recensione</h5>
                            <textarea class="form-control" rows="3" placeholder="Scrivi la tua recensione..."></textarea>
                            <button class="btn custom-button mt-3">Invia recensione</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

